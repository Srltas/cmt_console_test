ALTER VIEW [SYSTEM].[menu_view] ADD QUERY SELECT STRMCODE,  ltrim(sys_connect_by_path (to_char (STRMNAME), ' &gt; '), ' &gt; ') as MENUPATH  ,
STRMNAME AS MENUNAME, STRURL AS MENUURL
 FROM TB_MENU_DATA MENU WHERE CHARNBSP = '1'
AND CHARUSE = '1' AND STRTYPE = 'file'  and STRSITE != 'minwon'  AND STRURL IS NOT NULL
START WITH MENU.STRSITE = 'all' CONNECT BY PRIOR   
MENU.STRMCODE = MENU.STRMSTEPCODE;
ALTER VIEW [SYSTEM].[minwonform_view] ADD QUERY SELECT STRMCODE,  ltrim(sys_connect_by_path (to_char (STRMNAME), ' &gt; '), ' &gt; ') as MENUPATH  ,
STRMNAME AS MENUNAME, STRURL AS MENUURL,
STRPATH AS FILEPATH, STRTEL AS FILEURL
 FROM TB_MENU_DATA MENU WHERE CHARNBSP = '1'
AND CHARUSE = '1' AND STRTYPE = 'file' and STRSITE = 'minwon' AND STRURL IS NOT NULL
START WITH MENU.STRSITE = 'all' CONNECT BY PRIOR   
MENU.STRMCODE = MENU.STRMSTEPCODE;
ALTER VIEW [SYSTEM].[product_privs] ADD QUERY SELECT PRODUCT, USERID, ATTRIBUTE, SCOPE,
         NUMERIC_VALUE, CHAR_VALUE, DATE_VALUE, LONG_VALUE
  FROM SQLPLUS_PRODUCT_PROFILE
  WHERE USERID = 'PUBLIC' OR USER LIKE USERID;
ALTER VIEW [SYSTEM].[tb_pageadm_data2] ADD QUERY SELECT STRMNAME AS STRPAGENAME , STRDEPT, STRNAME, STRTEL, CHARETC, REPLACE(REPLACE(STRURL, 'http://water.busan.go.kr',''), 'https://water.busan.go.kr','') AS STRPAGEPATH FROM TB_MENU_DATA WHERE STRTYPE = 'file'  AND  STRDEPT IS NOT NULL;
ALTER VIEW [SYSTEM].[v_dansu] ADD QUERY SELECT SEQ,ADDR,DANSU_DATE,END_DATE,CONTENT FROM DANSU_BOARD;
ALTER VIEW [SYSTEM].[webpage_view] ADD QUERY SELECT STRMCODE,  ltrim(sys_connect_by_path (to_char (STRMNAME), ' &gt; '), ' &gt; ') as MENUPATH  ,
STRMNAME AS MENUNAME, STRPATH, STRURL AS MENUURL
 FROM TB_MENU_DATA MENU WHERE CHARNBSP = '1' AND STRURL IS NOT NULL AND STRPATH IS NOT NULL
AND CHARUSE = '1' AND STRTYPE = 'file' AND CHARSEARCH = '1' AND STROPTION = 'page' AND STRPATH IS NOT NULL
START WITH MENU.STRSITE = 'all' CONNECT BY PRIOR   
MENU.STRMCODE = MENU.STRMSTEPCODE;
